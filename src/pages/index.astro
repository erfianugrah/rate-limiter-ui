---
import Layout from '../layouts/Layout.astro';
import RateLimitRuleManager from '../components/RateLimitRuleManager';
---

<Layout title="Rate Limit Rule Manager">
  <main>
    <h1>Rate Limit Rule Manager</h1>
    <RateLimitRuleManager client:load />
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
</style>
